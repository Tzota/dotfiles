# вместо алиасов
lll() {
  ls -lhF --group-directories-first "$@"
}
lla() {
  ls -lAhF --group-directories-first "$@"
}

tree2() {
  tree -L 2 -d "$@"
}

tns() {
 tmux new-session -s "$@"
}


if [ "$SHELL" = "/usr/bin/zsh" ]; then
  export lll
  export lla
  export tree2
  export tns
else
  export -f lll
  export -f lla
  export -f tree2
  export -f tns
fi

if [ -f ~/.tzotasecrets ]; then
  source ~/.tzotasecrets # Не светим токенами, если шарим конфиг шелла между тачками
fi
